@page "/Lista"

<PageTitle>Lista</PageTitle>

<h1>Lista (@Liście.Count(Lista => !Lista.ZROBIONE))</h1>

    @foreach (var Lista in Liście)
    {
        <li>
            <input type="checkbox" @bind="Lista.ZROBIONE" />
            <input @bind="Lista.TYTUŁ" />
        </li>


    }
<p> Podaj imię i nazwisko poniżej </p>


<input placeholder="Imię i Nazwisko" @bind="newLista" />

<button @onclick="AddLista" class="btn btn-primary mt 3">Zapisz</button>





@code {
    private List<ListaItem> Liście = new();
    private string newLista;

    private void AddLista()
    {
        if (!string.IsNullOrWhiteSpace(newLista))
        {
            Liście.Add(new ListaItem { TYTUŁ = newLista });
            newLista = string.Empty;
        }
    }
}